<resources>


    <!-- Base application theme. -->
    <style name="login_module_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/login_module_titleBg</item>
        <item name="colorPrimaryDark">@color/login_module_titleBg</item>
        <item name="colorAccent">@color/login_module_colorAccent</item>
        <!-- 设置activity切换动画 -->
        <!--<item name="android:windowAnimationStyle">@style/activityAnimation</item>-->
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorBackgroundFloating">@color/login_module_white</item>
        <item name="toolbarNavigationButtonStyle">@style/login_module_myToolbarNavigationButtonStyle</item>
    </style>

    <style name="login_module_myToolbarNavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="login_module_AppTheme.Appbar">
        <item name="actionMenuTextColor">@drawable/login_module_menu_text_color</item>
        <item name="overlapAnchor">false</item>
        <item name="android:textColorPrimary">@color/login_module_white</item>
        <item name="colorControlNormal">@color/login_module_white</item>
    </style>

    <style name="login_module_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
